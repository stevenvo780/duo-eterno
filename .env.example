# Ejemplo de configuración para Dúo Eterno
# Copia este archivo como .env y ajusta los valores según tus necesidades

# ===========================================
# CONFIGURACIÓN DE VELOCIDAD GENERAL
# ===========================================

# Multiplicador general de velocidad del juego
# 1.0 = velocidad normal
# 2.0 = doble velocidad (útil para testing rápido)
# 0.5 = mitad velocidad (útil para debugging detallado)
VITE_GAME_SPEED_MULTIPLIER=1.0

# ===========================================
# INTERVALOS DE TIEMPO (en milisegundos)
# ===========================================

# Intervalo del reloj principal del juego
# Valores menores = eventos más frecuentes
# 500ms = normal, 100ms = muy rápido para debug
VITE_GAME_CLOCK_INTERVAL=500

# Intervalo de comportamientos autónomos (autopoiesis)
# 2000ms = normal, 500ms = rápido para testing
VITE_AUTOPOIESIS_INTERVAL=2000

# Intervalo de efectos de zona
# 1000ms = normal, 200ms = rápido para debug
VITE_ZONE_EFFECTS_INTERVAL=1000

# Duración de diálogos
# 2500ms = normal, 1000ms = rápido para testing
VITE_DIALOGUE_DURATION=2500

# ===========================================
# VELOCIDADES DE GAMEPLAY
# ===========================================

# Velocidad de degradación de estadísticas
# 1.0 = normal, 5.0 = muy rápido (para ver efectos rápidamente)
VITE_STAT_DECAY_SPEED=2.0

# Velocidad base de movimiento de entidades
# 0.8 = normal, 2.0 = rápido para testing
VITE_ENTITY_MOVEMENT_SPEED=0.8

# Frecuencia de cambio de actividades (probabilidad 0.0-1.0)
# 0.15 = normal, 0.8 = muy frecuente para testing
VITE_ACTIVITY_CHANGE_FREQUENCY=0.15

# Probabilidad de eventos críticos (muerte, etc.)
# 0.02 = normal, 0.1 = alto para testing
VITE_CRITICAL_EVENT_PROBABILITY=0.02

# ===========================================
# CONFIGURACIÓN DE RENDIMIENTO
# ===========================================

# FPS objetivo para el rendering del canvas
# 60 = normal, 30 = mejor rendimiento
VITE_TARGET_FPS=60

# FPS para actualizaciones de movimiento
# 30 = normal, 60 = más suave pero más costoso
VITE_MOVEMENT_UPDATE_FPS=30

# ===========================================
# DEBUGGING Y DESARROLLO
# ===========================================

# Habilitar modo debug (muestra métricas de rendimiento)
# true = mostrar debug info, false = ocultar
VITE_DEBUG_MODE=false

# ===========================================
# CONFIGURACIONES PREESTABLECIDAS
# ===========================================

# Para TESTING RÁPIDO, usa estos valores:
# VITE_GAME_SPEED_MULTIPLIER=5.0
# VITE_GAME_CLOCK_INTERVAL=100
# VITE_STAT_DECAY_SPEED=10.0
# VITE_AUTOPOIESIS_INTERVAL=500
# VITE_ACTIVITY_CHANGE_FREQUENCY=0.8
# VITE_CRITICAL_EVENT_PROBABILITY=0.2
# VITE_DEBUG_MODE=true

# Para MEJOR RENDIMIENTO, usa estos valores:
# VITE_TARGET_FPS=30
# VITE_MOVEMENT_UPDATE_FPS=20
# VITE_AUTOPOIESIS_INTERVAL=3000
# VITE_ZONE_EFFECTS_INTERVAL=2000

# Para PRODUCCIÓN, usa estos valores:
# VITE_GAME_SPEED_MULTIPLIER=1.0
# VITE_GAME_CLOCK_INTERVAL=1000
# VITE_STAT_DECAY_SPEED=1.0
# VITE_TARGET_FPS=60
# VITE_DEBUG_MODE=false
