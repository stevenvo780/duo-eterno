# Configuración de velocidades para debugging
# Valores más altos = eventos más rápidos (para testing)
# Valores más bajos = eventos más lentos (para gameplay normal)

# Multiplicador general de velocidad del juego (1.0 = normal, 2.0 = doble velocidad, 0.5 = mitad velocidad)
VITE_GAME_SPEED_MULTIPLIER=1.0

# Intervalo del game clock en milisegundos (500ms = normal, 100ms = muy rápido para debug)
VITE_GAME_CLOCK_INTERVAL=500

# Velocidad de degradación de stats (1.0 = normal, 5.0 = muy rápido para testing)
VITE_STAT_DECAY_SPEED=2.0

# Intervalo de autopoiesis en milisegundos (2000ms = normal, 500ms = rápido para debug)
VITE_AUTOPOIESIS_INTERVAL=2000

# Velocidad de movimiento de entidades (0.8 = normal, 2.0 = rápido para testing)
VITE_ENTITY_MOVEMENT_SPEED=0.8

# Frecuencia de cambio de actividades (0.15 = normal, 0.8 = muy frecuente para testing)
VITE_ACTIVITY_CHANGE_FREQUENCY=0.15

# Velocidad de updates de zona effects en milisegundos (1000ms = normal, 200ms = rápido)
VITE_ZONE_EFFECTS_INTERVAL=1000

# Target FPS para el rendering (60 = normal, 30 = más performance)
VITE_TARGET_FPS=60

# Modo debug para mostrar métricas de performance (true/false)
VITE_DEBUG_MODE=false

# Duración de diálogos en milisegundos (2500ms = normal, 1000ms = rápido para testing)
VITE_DIALOGUE_DURATION=2500

# Probabilidades de eventos críticos (0.02 = normal, 0.1 = alto para testing)
VITE_CRITICAL_EVENT_PROBABILITY=0.02

# Velocidad de updates de movimiento en FPS (30 = normal, 60 = más suave pero costoso)
VITE_MOVEMENT_UPDATE_FPS=30
